CC=gcc
CFLAGS=-shared -fpic
LDLIBS=-lpthread

SRCS = u_interrupt.c queue.c spinlock.c system.c atomic_xchange.S
OBJS = u_interrupt.o queue.o spinlock.o system.o atomic_xchange.o

all: libuli.a uli.so

libuli.a:	$(OBJS)
	ar ru $@ $^
	ranlib $@

uli.so: u_interrupt.c queue.c spinlock.c system.c atomic_xchange.S
	$(CC) $(CFLAGS) -o uli.so $^
clean:
	rm -f *.o *.a *.so

